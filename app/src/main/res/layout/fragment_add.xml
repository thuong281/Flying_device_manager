<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            tools:context=".app_ui.add_device.add.AddFragment">

            <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/register_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:text="Select register type"
                android:textColor="@color/boldGray"
                android:textSize="18sp" />

            <LinearLayout
                android:background="@drawable/border_black"
                android:padding="1dp"
                android:layout_below="@+id/register_type"
                android:id="@+id/spinner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DCD9D9" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_container"
                android:hint="Register name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_name"
                android:hint="Register id number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_national_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_national_id"
                android:hint="Register phone number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/device_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_phone"
                android:hint="Device Plate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/device_plate_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/device_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_plate"
                android:hint="Device color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/device_color_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/device_manufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_color"
                android:hint="Device manufacturer">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/device_manufacturer_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--    <com.google.android.material.textfield.TextInputLayout-->
            <!--        android:layout_below="@id/device_manufacturer"-->
            <!--        android:id="@+id/device_buy_date"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:hint="Device buy date">-->

            <!--        <com.google.android.material.textfield.TextInputEditText-->
            <!--            android:id="@+id/device_buy_date_text"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:focusable="false"/>-->
            <!--    </com.google.android.material.textfield.TextInputLayout>-->

            <RelativeLayout
                android:id="@+id/date_picker"
                android:layout_marginTop="12dp"
                android:background="@drawable/border_black"
                android:layout_below="@id/device_manufacturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="6dp"
                    android:src="@drawable/ic_baseline_calendar_month_24" />

                <TextView
                    android:id="@+id/device_buy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/icon"
                    android:padding="8dp"
                    android:text="Select device buy date"
                    android:textSize="16sp" />

            </RelativeLayout>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:background="@color/primaryColor"-->
<!--                android:layout_below="@+id/date_picker"-->
<!--                android:id="@+id/submit_add"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="24dp"-->
<!--                android:text="Add device" />-->

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="24dp"
                android:layout_below="@+id/date_picker"
                android:layout_marginBottom="8dp"
                android:id="@+id/submit_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_round_radius_10dp"
                android:elevation="4dp"
                android:text="Add device"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/primaryColor" />

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
